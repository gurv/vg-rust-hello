{
	"name": "@svg_rust_hello/monorepo",
	"private": true,
	"packageManager": "^pnpm@8.15.4",
	"scripts": {
		"preprep": "pnpm --filter @svg_rust_hello/scripts -- prep",
		"prep": "pnpm gen:prisma",
		"postprep": "pnpm codegen",
		"build": "turbo run build",
		"landing-web": "turbo run dev --parallel --filter=@vg/landing --filter=@vg/web",
		"gen:migrations": "cd core && cargo prisma migrate dev",
		"gen:prisma": "cd core && cargo prisma generate",
		"format": "prettier --write .",
		"desktop": "pnpm multi --filter @vg/desktop",
		"tauri": "pnpm desktop tauri",
		"web": "pnpm --filter @vg/web -- ",
		"mobile": "pnpm --filter @vg/mobile --",
		"core": "pnpm --filter @vg/server -- ",
		"landing": "pnpm --filter @vg/landing -- ",
		"ui": "pnpm --filter @vg/ui -- ",
		"interface": "pnpm --filter @vg/interface -- ",
		"assets": "pnpm --filter @vg/assets -- ",
		"client": "`pnpm --filter @vg/client -- ",
		"storybook": "pnpm --filter @vg/storybook -- ",
		"prisma": "cd core && cargo prisma",
		"dev:web": "turbo run dev --filter @vg/web --filter @vg/server",
		"dev:desktop": "pnpm run --filter @vg/desktop tauri dev",
		"bootstrap:desktop": "cargo clean && ./scripts/setup.sh && pnpm i && pnpm prep && pnpm tauri dev",
		"codegen": "cargo test -p vg-core api::tests::test_and_export_rspc_bindings -- --exact",
		"typecheck": "pnpm -r typecheck",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint -- --fix",
		"clean": "git clean -qfX ."
	},
	"pnpm": {
		"overrides": {
			"@types/node": "~18.19.21",
			"@typescript-eslint/parser": "^7.1.0"
		}
	},
	"devDependencies": {
		"@babel/core": "^7.23.9",
		"@babel/plugin-syntax-import-assertions": "^7.23.3",
		"@cspell/dict-rust": "^4.0.2",
		"@cspell/dict-typescript": "^3.1.2",
		"@ianvs/prettier-plugin-sort-imports": "^4.1.1",
		"cspell": "^8.4.1",
		"prettier": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"turbo": "^1.12.4",
		"turbo-ignore": "^1.12.4",
		"typescript": "^5.3.3",
		"vite": "^5.1.4"
	},
	"eslintConfig": {
		"root": true
	}
}
